<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".View.ListFragmentView" android:orientation="vertical">
    <!--액션바-->
    <android.support.design.widget.AppBarLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/postListView"
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:elevation="0dp">
        <android.support.v7.widget.Toolbar
                android:elevation="0dp"
                android:id="@+id/toolbar_rating"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                app:layout_scrollFlags="scroll|enterAlways">
            <FrameLayout
                    android:padding="5dp"
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:orientation="horizontal">
                <TextView
                        style="@style/actionbarTitleText"
                        android:text="을지로 힙스터"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <ImageView
                        android:layout_width="40dp" android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:src="@color/colorAccent"
                        android:id="@+id/createPost"/>
            </FrameLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <!--게시물 리스트-->
    <android.support.v7.widget.RecyclerView
            app:layout_constraintTop_toBottomOf="@id/appbar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#dfdfdf"
            android:layout_weight="1"
            android:id="@+id/postListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
</android.support.constraint.ConstraintLayout>